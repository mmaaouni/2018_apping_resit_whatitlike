<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:orientation="vertical"
        android:accessibilityPaneTitle="azeazezae"
        android:weightSum="1"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="About Like or Not Like"
            android:elegantTextHeight="true"
            android:gravity="center"
            android:textSize="16pt"
            android:background="@color/titleColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

    <ImageView
        android:layout_width="250px"
        android:layout_height="250px"

        android:src="@mipmap/ic_thumb_up"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="125dp" />

    <ImageView
        android:layout_width="250px"
        android:layout_height="250px"

        android:src="@mipmap/ic_thumb_down"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="172dp" />


    <ImageView
        android:layout_width="250px"
        android:layout_height="250px"
        android:src="@mipmap/img_epita"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="630dp" />


</android.support.constraint.ConstraintLayout>